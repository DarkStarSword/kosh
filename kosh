#!/usr/bin/env python
# vi:sw=2:ts=2:expandtab

version = '0.1' #FIXME: use git describe if from git repository
passdb_default = '~/.koshdb'

import sys

from util.decorators import *
import koshcurses.err
import koshcurses.dialog

try:
  import Crypto
except ImportError:
  print 'ERROR: Python crypto library not found - Please install pycrypto (apt-get install python-crypto)'
  sys.exit(1)
else:
  del Crypto

try:
  import urwid
except ImportError:
  print 'ERROR: Python curses library not found - Please install urwid (apt-get install python-urwid)'
  sys.exit(1)
else:
  del urwid

def getParameters():
  import optparse
  usage = 'usage: %prog [passdb]'
  parser = optparse.OptionParser(usage=usage, version="%%prog %s" % version)
  # No non positional options just yet...
  (options, args) = parser.parse_args()

  # argparse from python2.7 would be nice, but I need to support older versions for now
  if len(args):
    options.passdb = args.pop(0)
  else:
    options.passdb = passdb_default

  if len(args):
    parser.error('Too many arguments')
  return options

@handleErr(koshcurses.err.showErr)
def main():
  import koshdb,os
  options = getParameters()
  def prompt(message):
    dialog = koshcurses.dialog.inputDialog(message=message)
    return dialog.showModal()
  db = koshdb.KoshDB(os.path.expanduser(options.passdb), prompt)

if __name__ == '__main__':
  main()
